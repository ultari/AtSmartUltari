<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="300dp"
	android:layout_height="match_parent"
	android:background="#E6E6FA">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Public Server Info (ip:port)"
        android:textColor="#ff000000"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
    	<EditText android:id="@+id/publicServerIp" android:layout_width="match_parent" android:layout_weight="0.3" android:layout_height="wrap_content" android:inputType="text"></EditText>
    	<EditText android:id="@+id/publicServerPort" android:layout_width="match_parent" android:layout_weight="0.7" android:layout_height="wrap_content" android:inputType="text"></EditText>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Private Server Info"
        android:textColor="#ff000000"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
    	<EditText android:id="@+id/privateServerIp" android:layout_width="match_parent" android:layout_weight="0.3" android:layout_height="wrap_content" android:inputType="text"></EditText>
    	<EditText android:id="@+id/privateServerPort" android:layout_width="match_parent" android:layout_weight="0.7" android:layout_height="wrap_content" android:inputType="text"></EditText>
    </LinearLayout>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Public Proxy Server Info"
        android:textColor="#ff000000"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="20dp" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
    	<EditText android:id="@+id/publicProxyIp" android:layout_width="match_parent" android:layout_weight="0.3" android:layout_height="wrap_content" android:inputType="text"></EditText>
    	<EditText android:id="@+id/publicProxyPort" android:layout_width="match_parent" android:layout_weight="0.7" android:layout_height="wrap_content" android:inputType="text"></EditText>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Private Proxy Server Info"
        android:textColor="#ff000000"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
    	<EditText android:id="@+id/privateProxyIp" android:layout_width="match_parent" android:layout_weight="0.3" android:layout_height="wrap_content" android:inputType="text"></EditText>
    	<EditText android:id="@+id/privateProxyPort" android:layout_width="match_parent" android:layout_weight="0.7" android:layout_height="wrap_content" android:inputType="text"></EditText>
    </LinearLayout>
    
    <TableLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginBottom="10dp">
		<TableRow>
    	    <TextView android:layout_height="0dp" android:layout_span="2" android:layout_width="0dp" android:text=""></TextView>
    	</TableRow>
    	<TableRow
    	    android:gravity="center">
			<Button 
			    android:text="@string/ok" 
			    android:id="@+id/btnServerSave" 
			    android:layout_width="wrap_content" 
			    android:layout_height="wrap_content"
			    android:background="@drawable/btn_blue" style="@style/ButtonText"></Button>
	   		<Button 
	   		    android:text="@string/cancel" 
	   		    android:id="@+id/btnServerCancel" 
	   		    android:layout_width="wrap_content" 
	   		    android:layout_height="wrap_content"
	   		    android:background="@drawable/btn_blue" style="@style/ButtonText"></Button>
	   	</TableRow>
    </TableLayout>
</LinearLayout>
