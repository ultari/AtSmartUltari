<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="250dp"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:background="#FFFFFF">
	<TextView android:text="" android:layout_gravity="center" android:id="@+id/oldVersion" android:textColor="#000000" android:gravity="center|center_vertical" android:layout_width="wrap_content" android:layout_height="40dp"/>
	<TextView android:text="" android:layout_gravity="center" android:id="@+id/newVersion" android:textColor="#000000" android:gravity="center|center_vertical" android:layout_width="wrap_content" android:layout_height="40dp"/>
	<ProgressBar
		android:id="@+id/progressBar"
		style="?android:attr/progressBarStyleHorizontal"
		android:layout_width="200dp"
		android:layout_height="wrap_content"
		android:layout_gravity="center"/>
	<TextView android:text="" android:id="@+id/blank" android:textColor="#000000" android:gravity="left|center_vertical" android:layout_width="wrap_content" android:layout_height="40dp"/>
</LinearLayout>