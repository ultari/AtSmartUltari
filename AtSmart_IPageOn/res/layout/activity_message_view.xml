<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context="kr.co.ultari.atsmart.MessageView.MessageView" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="39.3dp"
        android:background="#f1f1f1" >
        
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/btn_write"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:id="@+id/writeIcon"
            android:contentDescription="@string/noDesc"/>
        
        <Button 
            android:id="@+id/writeMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/message_write"
            android:layout_toRightOf="@id/writeIcon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"
            android:textStyle="normal"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/clickable_words"
            android:textColorHighlight="@color/clickable_words"
            android:textColorLink="@color/clickable_words"
            android:textSize="16.6dp"/>
        
        <Button
            android:id="@+id/sendBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/btn_note_box"
            android:text="@string/message_send_box"
            android:textColor="@color/note_clickable_words"
            android:textColorHighlight="@color/note_clickable_words"
            android:textColorLink="@color/note_clickable_words"
            android:textSize="13.3dp"
            android:textStyle="normal"/>
        
        <Button
            android:id="@+id/receiveBox"
            android:layout_toLeftOf="@id/sendBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/btn_note_box"
            android:text="@string/message_receive_box"
            android:textColor="@color/note_clickable_words"
            android:textColorHighlight="@color/note_clickable_words"
            android:textColorLink="@color/note_clickable_words"
            android:textSize="13.3dp"
            android:textStyle="normal"/>
        
    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.67dp"
        android:background="#d6d6d6"
        android:orientation="vertical" >
    </LinearLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="39.3dp"
        android:background="#f1f1f1" >

        <LinearLayout
            android:layout_width="3.33dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_vertical"
            android:background="#8d9dd8"
            android:orientation="vertical"
            android:visibility="gone" >
        </LinearLayout>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="100dp"
            android:id="@+id/message_title"
            android:layout_centerVertical="true"
            android:textColor="#7f7f7f"
            android:textSize="13.3dp"/>

        <Button
            android:id="@+id/delete_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/btn_note_box"
            android:text="@string/message_delete_all"
            android:textColor="@color/note_clickable_words"
            android:textColorHighlight="@color/note_clickable_words"
            android:textColorLink="@color/note_clickable_words"
            android:textSize="13.3dp"
            android:textStyle="normal"/>
        
    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.67dp"
        android:background="#d6d6d6"
        android:orientation="vertical" >
    </LinearLayout>
    
    <ListView 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ffffff"
        android:divider="#00000000"
        android:dividerHeight="0px"
        android:id="@+id/message_List"/>

</LinearLayout>