<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:gravity="center|center_vertical"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="#003e7c"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2.33dp"
            android:background="#ffffff"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.67dp"
                android:background="#d6d6d6"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/main_launcher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="6dp"
                    android:background="@drawable/notice_unread"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/alertDialogTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="left|center_vertical"
                    android:maxLines="10"
                    android:padding="5dp"
                    android:text="TextView"
                    android:textColor="#74afea"
                    android:textSize="16.6dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.67dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="#d6d6d6"
                android:orientation="vertical" >

            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/detailUserImage"
                    android:background="@drawable/img_profile_72x72"
                    android:layout_width="50dp"
		            android:layout_height="50dp"
		            android:layout_margin="5dp"/>

                <TextView
                    android:id="@+id/detailMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="left|center_vertical"
                    android:maxLines="10"
                    android:padding="5dp"
                    android:text="TextView"
                    android:textColor="#333333"
                    android:textSize="13.3dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.67dp"
                android:background="#d6d6d6"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42.3dp"
                android:background="#fcfcfc" >

                <Button
                    android:id="@+id/runAlert"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    android:background="#fcfcfc"
                    android:text="@string/view"
                    android:textColor="#7f7f7f" />

                <LinearLayout
                    android:layout_width="0.67dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="#d6d6d6"
                    android:orientation="vertical" >

                </LinearLayout>

                <Button
                    android:id="@+id/closeAlert"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    android:background="#fcfcfc"
                    android:text="@string/close"
                    android:textColor="#7f7f7f" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.67dp"
                android:layout_marginBottom="1dp"
                android:background="#d6d6d6"
                android:orientation="vertical" >

            </LinearLayout>
            
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

