<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/search_top"
        android:background="#0000FF"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.67dp"
            android:background="#d6d6d6"
            android:orientation="vertical" >
        </LinearLayout>

        <ScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/organization_gesture"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#ffffff"
            >
            <!-- android:fadeScrollbars="true"
            android:scrollbarDefaultDelayBeforeFade="2000"
            android:scrollbarFadeDuration="1000"
            android:scrollbarSize="5dip"
            android:scrollbarStyle="outsideOverlay"
            android:scrollbarThumbVertical="@drawable/scrollbar_vertical_thumb"
            android:scrollbarTrackVertical="@drawable/scrollbar_vertical_track"  -->
            
            <LinearLayout
                android:id="@+id/TreeLayout"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:background="#ffffff"
                android:orientation="vertical" >
            </LinearLayout>
        </ScrollView>

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/user_bar"
            android:stretchColumns="1,3,5"
            android:visibility="gone" >

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="3dp" >

                <TextView
                    android:layout_width="3dp"
                    android:layout_height="3dp"
                    android:text="" >
                </TextView>
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/userTabLeftMargin"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/noDesc"
                    android:src="@drawable/user_tab_n_l" />

                <Button
                    android:id="@+id/userTabLeftButton"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/user_tab_n_m"
                    android:text="@string/buddy"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/userTabLeftCenterMargin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/noDesc"
                    android:src="@drawable/user_tab_a_line_r" />

                <Button
                    android:id="@+id/userTabCenterButton"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/user_tab_a_m"
                    android:text="@string/organization"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/userTabRightCenterMargin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/noDesc"
                    android:src="@drawable/user_tab_a_line_l" />

                <Button
                    android:id="@+id/userTabRightButton"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/user_tab_n_m"
                    android:text="@string/search"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/userTabRightMargin"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/noDesc"
                    android:src="@drawable/user_tab_n_r" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="3dp" >

                <TextView
                    android:layout_width="3dp"
                    android:layout_height="3dp"
                    android:text="" >
                </TextView>
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_org_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#00000000"
        android:gravity="bottom"
        android:orientation="vertical"
        android:visibility="invisible" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:background="#00000000"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:gravity="center"
                android:visibility="invisible"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/btn_org_dc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/btn_org_fmc"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/btn_org_chat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_org_chat" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/btn_org_sms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_org_sms" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:gravity="center"
                android:visibility="invisible"
                android:orientation="vertical" >

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_org_chat" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp" 
            android:background="#000000" >

            <TextView
                android:id="@+id/tv_org_userlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:lines="1"
                android:text="21,홍길동2,홍길동3,홍길동4,홍길동5"
                android:textColor="#ffffff"
                android:textSize="13.3dp" />

            <TextView
                android:id="@+id/tv_org_userCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="6dp"
                android:background="@drawable/multi_select_count"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="16"
                android:textColor="#ffffff"
                android:textSize="16.6dp" />

        </LinearLayout>
    </LinearLayout>

    <TableLayout
        android:id="@+id/Waiter"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center|center_vertical"
        android:background="#000000"
        android:padding="1dp"
        android:stretchColumns="0,2"
        android:visibility="invisible" >

        <TableRow
            android:background="@drawable/top_bar"
            android:gravity="center|center_vertical" >

            <TextView
                android:id="@+id/custom_title2"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_span="3"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />
        </TableRow>

        <TableRow
            android:background="#FFFFFF"
            android:gravity="center|center_vertical" >

            <TextView
                android:id="@+id/content2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_span="3"
                android:gravity="left"
                android:text="@string/app_name"
                android:textColor="#000000"
                android:textSize="15sp" />
        </TableRow>

        <TableRow
            android:background="#FFFFFF"
            android:gravity="center|top" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:text="" >
            </TextView>
        </TableRow>

        <TableRow
            android:background="#FFFFFF"
            android:gravity="center|top" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="" >
            </TextView>

            <ProgressBar
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:windowSoftInputMode="adjustPan" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="" >
            </TextView>
        </TableRow>

        <TableRow
            android:background="#FFFFFF"
            android:gravity="center|top" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:text="" >
            </TextView>
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:id="@+id/search_top"
        android:layout_width="match_parent"
        android:layout_height="50.6dp"
        android:orientation="horizontal"
        android:background="#f1f1f1" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="13dp"
            android:background="@drawable/icon_search" />

        <Button
            android:id="@+id/organization_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="13dp"
            android:layout_weight="1"
            android:background="#f1f1f1"
            android:gravity="left|center_vertical"
            android:text="@string/search"
            android:textColor="#7f7f7f"
            android:textSize="16.6dp" />

    </LinearLayout>

</RelativeLayout>