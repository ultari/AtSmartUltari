<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80212527"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#333C67"
        android:orientation="vertical"
        android:padding="2.33dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="#8d9dd8"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.67dp"
                android:orientation="vertical"
                android:background="#a4b1e0" >
            </LinearLayout>

            <TextView
                android:id="@+id/password_custom_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19.67dp"
                android:layout_marginTop="19.67dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="left"
                android:text="@string/config_password"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ffffff"
                android:textSize="8.55pt" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38.33dp"
            android:background="#ffffff"
            android:gravity="bottom|left"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="19.67dp"
                android:text="기존 패스워드 입력"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#8D9DD8"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff" >

            <EditText
                android:id="@+id/et_oldPassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.8"
                android:background="@drawable/img_inputfield_whitepopup_2_normal"
                android:ems="10"
                android:inputType="textPassword" />

        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38.33dp"
            android:background="#ffffff"
            android:gravity="bottom|left"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="19.67dp"
                android:text="신규 패스워드 입력"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#8D9DD8"
                android:textSize="15dp" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff" >

            <EditText
                android:id="@+id/et_newPassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.8"
                android:background="@drawable/img_inputfield_whitepopup_2_normal"
                android:ems="10"
                android:inputType="textPassword" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="28.33dp"
            android:background="#ffffff"
            android:gravity="bottom|left"
            android:orientation="vertical" >
        </LinearLayout>
        
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right" >

            <TableRow>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_span="2"
                    android:text="" >
                </TextView>
            </TableRow>

            <TableRow
                android:background="#C6C6C6"
                android:gravity="center" >

                <Button
                    android:id="@+id/cancelPassword"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/border_gray"
                    android:text="@string/cancel"
                    android:textColor="#979696" 
                    android:textSize="8.55pt"/>

                <Button
                    android:id="@+id/savePassword"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/border_gray"
                    android:text="@string/save"
                    android:textColor="#979696"
                    android:textSize="8.55pt" >
                </Button>
            </TableRow>
        </TableLayout>
    </LinearLayout>

</RelativeLayout>