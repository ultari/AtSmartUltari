	        <Button
	            android:id="@+id/background_color12"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:layout_weight="0.33"
	            android:background="#bdbdbd" />
	
	    </LinearLayout>
	    
	    <ImageView
	        android:layout_width="wrap_content"
	        android:layout_height="1dp"
	        android:background="#ffffffff"/>
	
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="0.2"
	        android:background="#ff000088" >
	        
	        <Button
	            android:id="@+id/background_color13"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:layout_weight="0.33"
	            android:background="#dddefa" />
	        
	        <ImageView
	            android:layout_width="1dp"
	            android:layout_height="match_parent"
	            android:background="#ffffffff" />
	        
	        <Button
	            android:id="@+id/background_color14"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:layout_weight="0.33"
	            android:background="#e4f3ca" />
	        
	        <ImageView
	            android:layout_width="1dp"
	            android:layout_height="match_parent"
	            android:background="#ffffffff" />
	        
	        <Button
	            android:id="@+id/background_color15"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:layout_weight="0.33"
	            android:background="#b2c9d9" />
	
	    </LinearLayout>
	    
	    </LinearLayout>
	
	    <ImageView
	        android:id="@+id/background_image"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:background="#c3e0f2"
	        android:visibility="visible" />
	
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="0.67dp"
	        android:background="#ffffff"
	        android:orientation="vertical">
    	</LinearLayout>
    	
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="0.67dp"
	        android:background="#d6d6d6"
	        android:orientation="vertical">
    	</LinearLayout>

	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="61dp"
	        android:layout_marginLeft="6dp"
	        android:layout_marginRight="6dp"
	        android:layout_marginTop="6dp"
	        android:background="#ffffff" >

	        <ImageView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:layout_marginLeft="16dp"
	            android:background="@drawable/btn_palette" />

	        <Button
	            android:id="@+id/background_btn_color"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:layout_marginLeft="16dp"
	            android:background="#ffffff"
	            android:gravity="left|center_vertical"
	            android:text="@string/colorbackground"
	            android:textColor="#333333"
	            android:textSize="16.6dp" />

	    </LinearLayout>
	
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="0.67dp"
	        android:layout_marginLeft="6dp"
	        android:layout_marginRight="6dp"
	        android:background="#d6d6d6"
	        android:orientation="vertical" >

    	</LinearLayout>

	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="6dp"
	        android:layout_marginRight="6dp"
	        android:background="#ffffff" >

	        <ImageView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:layout_marginLeft="16dp"
	            android:background="@drawable/btn_new_picture" />
	        
	        <Button
	            android:id="@+id/background_btn_album"
	            android:layout_width="match_parent"
	            android:layout_height="61dp"
	            android:background="#ffffff"
	            android:layout_marginLeft="16dp"
	            android:gravity="left|center_vertical"
	            android:text="@string/albumbackground"
	            android:textColor="#333333"
	            android:textSize="16.6dp" />

	    </LinearLayout>
	
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="0.67dp"
	        android:layout_marginLeft="6dp"
	        android:layout_marginRight="6dp"
	        android:background="#d6d6d6"
	        android:orientation="vertical" >

    	</LinearLayout>

	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" >

	        <Button
	            android:id="@+id/background_btn_save"
	            android:layout_width="match_parent"
	            android:layout_height="42.6dp"
	            android:layout_marginLeft="6dp"
	            android:layout_marginRight="6dp"
	            android:background="#fcfcfc"
	            android:text="@string/background_save"
	            android:textColor="#7f7f7f"
	            android:textSize="13.3dp"
	            android:textStyle="bold" />

	    </LinearLayout>
	        
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="0.67dp"
	        android:layout_marginBottom="6dp"
	        android:layout_marginLeft="6dp"
	        android:layout_marginRight="6dp"
	        android:background="#d6d6d6"
	        android:orientation="vertical" >

    	</LinearLayout>
