<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/favorite_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/favorite_layout"
        android:background="#ffffff"
        android:dividerHeight="0px"
 		android:divider="#ffffff" >
    </ListView>
    
    <LinearLayout
        android:id="@+id/favorite_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#f1f1f1" >

        <RelativeLayout
            android:id="@+id/favorite_tab_normal"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:gravity="right"
            android:orientation="horizontal"
            android:visibility="visible" >

            <Button
                android:id="@+id/favorite_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="13.33dp"
                android:background="@drawable/favorite_option" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/favorite_tab_selected"
            android:layout_width="match_parent"
            android:layout_height="50.6dp"
            android:background="@drawable/pattern_bar"
            android:visibility="gone" >

            <Button
                android:id="@+id/favorite_remove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="13dp"
                android:background="@drawable/favorite_cancel"
                android:text="@string/delete"
                android:textColor="#ffffff"
                android:textSize="13.3dp" />

            <Button
                android:id="@+id/favorite_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="13dp"
                android:background="@drawable/favorite_cancel"
                android:text="@string/cancel"
                android:textColor="#ffffff"
                android:textSize="13.3dp" />

            <TextView
                android:id="@+id/favorite_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="false"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/favorite_delete"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="19dp"
                android:textColor="#fefefe" />
            	

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1.33dp"
        android:layout_below="@+id/favorite_layout"
        android:background="#191919"
        android:orientation="vertical" >

    </LinearLayout>

    <LinearLayout
        android:id="@+id/favorite_option_dialog"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/favorite_layout"
        android:layout_margin="5dp"
        android:background="#999999"
        android:orientation="vertical"
        android:padding="1dp"
        android:visibility="gone" >

        <Button
            android:id="@+id/favorite_checkremove"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:background="#ffffff"
            android:text="@string/edit"
            android:textColor="#333333"
            android:textSize="13.3dp" />

        <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="0.67dp"
	        android:orientation="vertical"
	        android:background="#d6d6d6" >
	    </LinearLayout>
    
        <Button
            android:id="@+id/favorite_removeall"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:background="#ffffff"
            android:text="@string/favorite_alldel"
            android:textColor="#333333"
            android:textSize="13.3dp" />
    </LinearLayout>

</RelativeLayout>