<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50.6dp"
        android:background="@drawable/pattern_bar"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/pin_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:background="@drawable/btn_cancel"
            android:textSize="13.3dp"
            android:textColor="#ffffff"
            android:text="@string/cancel" />

        <TextView
            android:id="@+id/pin_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:text="PIN 입력"
            android:textColor="#ffffff"
            android:textSize="19dp" />

        <Button
            android:id="@+id/pin_continue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="13dp"
            android:textSize="13.3dp"
            android:textColor="#ffffff"
            android:background="@drawable/btn_cancel"
            android:text="계속" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.05"
        android:orientation="vertical" >

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.05"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/pin_sub_main_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.1"
            android:gravity="center_vertical|center_horizontal"
            android:text="완료되면 완료 버튼을 누르세요."
            android:textColor="#74afea"
            android:textSize="19dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal" >
        
	    <TextView
	        android:id="@+id/pin_pinBox0"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:layout_margin="5dp"
	        android:editable="false"
	        android:gravity="center"
	        android:inputType="numberPassword"
	        android:password="true"
	        android:text=""
	        android:textColor="#7f7f7f"
	        android:textSize="73.3dp" />
	
	    <TextView
	        android:id="@+id/pin_pinBox1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:layout_margin="5dp"
	        android:editable="false"
	        android:gravity="center"
	        android:inputType="numberPassword"
	        android:password="true"
	        android:text=""
	        android:textColor="#7f7f7f"
	        android:textSize="73.3dp" />
	
	    <TextView
	        android:id="@+id/pin_pinBox2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:layout_margin="5dp"
	        android:editable="false"
	        android:gravity="center"
	        android:inputType="numberPassword"
	        android:password="true"
	        android:text=""
	        android:textColor="#7f7f7f"
	        android:textSize="73.3dp" />
	
	    <TextView
	        android:id="@+id/pin_pinBox3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:layout_margin="5dp"
	        android:editable="false"
	        android:gravity="center"
	        android:inputType="numberPassword"
	        android:password="true"
	        android:text=""
	        android:textColor="#7f7f7f"
	        android:textSize="73.3dp" />
	    
	    <TextView
	        android:id="@+id/pin_pinBox4"
	        android:visibility="gone"
	        android:layout_width="40dp"
	        android:layout_height="40dp"
	        android:layout_gravity="center_vertical"
	        android:layout_margin="5dp"
	        android:background="@drawable/border_gray"
	        android:editable="false"
	        android:gravity="center"
	        android:inputType="numberPassword"
	        android:password="true"
	        android:text=""
	        android:textColor="#ffd700"
	        android:textSize="20dp" />
	    
	    <TextView
	        android:id="@+id/pin_pinBox5"
	        android:visibility="gone"
	        android:layout_width="40dp"
	        android:layout_height="40dp"
	        android:layout_gravity="center_vertical"
	        android:layout_margin="5dp"
	        android:background="@drawable/border_gray"
	        android:editable="false"
	        android:gravity="center"
	        android:inputType="numberPassword"
	        android:password="true"
	        android:text=""
	        android:textColor="#ffd700"
	        android:textSize="20dp" />
    </LinearLayout>

    <EditText
        android:id="@+id/pin_edit"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.1"
        android:background="#ffffff"
        android:ems="10"
        android:gravity="center"
        android:inputType="numberPassword"
        android:maxLength="4"
        android:imeOptions="actionNext" 
        android:textColor="#333333"
        android:textSize="19dp" >
        <requestFocus />
    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.67dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="-20dp"
        android:background="#d6d6d6"
        android:orientation="vertical"
        android:visibility="invisible" >

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.05"
        android:orientation="vertical" >

    </LinearLayout>

    <LinearLayout
        android:id="@+id/pin_reconfirm_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible" >

        <TextView
            android:id="@+id/pin_sub2_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="PIN 확인"
            android:textColor="#333333"
            android:textSize="19dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/pin_reconfirm_pinBox0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:editable="false"
                android:gravity="center"
                android:inputType="numberPassword"
                android:password="true"
                android:text=""
                android:textColor="#7f7f7f"
                android:textSize="73.3dp" />

            <TextView
                android:id="@+id/pin_reconfirm_pinBox1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:editable="false"
                android:gravity="center"
                android:inputType="numberPassword"
                android:password="true"
                android:text=""
                android:textColor="#7f7f7f"
                android:textSize="73.3dp" />

            <TextView
                android:id="@+id/pin_reconfirm_pinBox2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:editable="false"
                android:gravity="center"
                android:inputType="numberPassword"
                android:password="true"
                android:text=""
                android:textColor="#7f7f7f"
                android:textSize="73.3dp" />

            <TextView
                android:id="@+id/pin_reconfirm_pinBox3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:editable="false"
                android:gravity="center"
                android:inputType="numberPassword"
                android:password="true"
                android:text=""
                android:textColor="#7f7f7f"
                android:textSize="73.3dp" />

            <TextView
                android:id="@+id/pin_reconfirm_pinBox4"
                android:visibility="gone"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:background="@drawable/border_gray"
                android:editable="false"
                android:gravity="center"
                android:inputType="numberPassword"
                android:password="true"
                android:textColor="#8d9dd8"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/pin_reconfirm_pinBox5"
                android:visibility="gone"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:background="@drawable/border_gray"
                android:editable="false"
                android:gravity="center"
                android:inputType="numberPassword"
                android:password="true"
                android:textColor="#8d9dd8"
                android:textSize="20dp" />
        </LinearLayout>

        <EditText
            android:id="@+id/pin_reconfirm"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="13dp"
            android:background="#ffffff"
            android:ems="10"
            android:gravity="center"
            android:inputType="numberPassword"
            android:imeOptions="actionDone"  
            android:maxLength="4"
            android:textColor="#333333"
        	android:textSize="19dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.67dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="-5dp"
            android:background="#d6d6d6"
            android:orientation="vertical"
            android:visibility="invisible" >
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>