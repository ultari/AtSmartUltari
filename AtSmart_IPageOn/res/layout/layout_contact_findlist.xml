<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="#ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="63dp"
            android:layout_height="63dp"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/contact_find_photo"
                android:layout_width="63dp"
                android:layout_height="63dp"
                android:background="@drawable/img_profile_190x190"
                android:scaleType="fitXY" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/contact_find_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="6dp"
                android:layout_weight="0.5"
                android:singleLine="true"
                android:text="아무개"
                android:textColor="#333333"
                android:textSize="16.6dp" />

            <TextView
                android:id="@+id/contact_find_phonenumber"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="13dp"
                android:layout_weight="0.50"
                android:singleLine="true"
                android:text="000-0000-0000"
                android:textColor="#7f7f7f"
                android:textSize="13.3dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.67dp"
        android:layout_marginLeft="64dp"
        android:background="#d6d6d6"
        android:orientation="vertical" >

    </LinearLayout>

</LinearLayout>