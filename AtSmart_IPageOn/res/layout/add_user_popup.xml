<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
   	<TableLayout
	    android:layout_width="match_parent"
	    android:layout_height="40dp"
	    android:layout_margin="0dp"
	    android:background="@drawable/search_bar"
	    android:padding="0dp"
	    android:stretchColumns="4" >

		<TableRow android:layout_width="0dp" android:layout_height="5dp" android:gravity="center_vertical">
  	    	<TextView android:layout_span="7" android:layout_height="5dp" android:layout_width="0dp" android:text=""></TextView>
  		</TableRow>
		<TableRow
		  android:layout_width="0dp"
		  android:layout_height="wrap_content"
		  android:gravity="center_vertical"
		  android:layout_margin="0dp">
		    <TextView android:layout_height="match_parent" android:layout_width="5dp" android:text=""></TextView>
		    <Button
		      android:background="@drawable/search_selectbox"
		      android:layout_width="106.5dp"
		      android:layout_height="30dp"
		      android:id="@+id/searchType"
		      android:scaleType="fitXY"
		      android:text="@string/search_type_name"
		      android:gravity="left|center_vertical"
		      android:paddingLeft="25dp"
		      android:focusable="false"
			android:focusableInTouchMode="false"
		      android:contentDescription="@string/noDesc"/>
		    <TextView android:layout_height="match_parent" android:layout_width="5dp" android:text=""></TextView>
		    <ImageView
		        android:layout_width="5dp"
		        android:layout_height="30dp"
		        android:layout_marginLeft="0px"
		        android:layout_marginRight="0px"
		        android:contentDescription="@string/noDesc"
		        android:padding="0px"
		        android:paddingLeft="0px"
		        android:paddingRight="0dp"
		        android:background="@drawable/search_input_l"/>

		    <EditText
		        android:id="@+id/searchText"
		        android:layout_width="match_parent"
		        android:layout_height="30dp"
		        android:layout_marginLeft="0px"
		        android:layout_marginRight="0px"
		        android:background="@drawable/search_input_m"
		        android:gravity="center_vertical|left"
		        android:inputType="text"
		        android:padding="0px"
		        android:paddingLeft="0dp"
		        android:paddingRight="0dp" />

		   	<ImageButton
				android:id="@+id/search"
				android:background="@drawable/search_input_r"
				android:layout_width="40.5dp"
				android:paddingLeft="0dp"
				android:paddingRight="0dp"
				android:layout_marginLeft="0px"
				android:layout_marginRight="0px"
				android:layout_height="30dp"
				android:focusable="false"
				android:focusableInTouchMode="false"
				android:contentDescription="@string/noDesc"/>
		   	
		   	<TextView android:layout_height="match_parent" android:layout_width="5dp" android:text=""></TextView>
		</TableRow>
		<TableRow android:layout_width="0dp" android:layout_height="5dp" android:gravity="center_vertical">
  	    	<TextView android:layout_span="7" android:layout_height="5dp" android:layout_width="0dp" android:text=""></TextView>
  		</TableRow>
	</TableLayout>
	<ListView
	  android:orientation="vertical"
	  android:layout_width="fill_parent"
	  android:layout_height="match_parent"
	  android:id="@+id/SearchUserResult">
	</ListView>

</LinearLayout>