<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#99000000"
    android:stretchColumns="0,2"
    android:layout_gravity="center|center_vertical">
    <TableRow
        android:background="@drawable/top_bar"
        android:visibility="gone"
        android:gravity="center|center_vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="center"
            android:text="@string/app_name"
            android:textSize="15sp"
            android:layout_span="3"
            android:textColor="#FFFFFF"
            android:id="@+id/custom_title2"/>
    </TableRow>
    <TableRow
        android:background="#000000"
        android:visibility="gone"
        android:gravity="center|center_vertical">

        <TextView
            android:id="@+id/content2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_span="3"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="15sp" />

    </TableRow>

    <TableRow
        android:visibility="gone"
        android:background="#000000"
        android:gravity="center|top">
	    <TextView android:layout_height="10dp" android:layout_width="0dp" android:text=""></TextView>
	</TableRow>
	
    <TableRow
        android:background="#FFFFFF"
        android:gravity="center|top"
        android:visibility="gone">
        <TextView android:layout_height="0dp" android:layout_width="0dp" android:text=""></TextView>

        <ImageView
            android:id="@+id/testview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="-35dp"
            android:src="@drawable/logo" 
            android:contentDescription="@string/noDesc"/>

	    <TextView android:layout_height="0dp" android:layout_width="0dp" android:text=""></TextView>
	</TableRow>
	
    <!-- <TableRow
        android:background="#FFFFFF"
        android:gravity="center|top"> -->

	        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
			    android:orientation="vertical"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:background="#00000000"
			    android:gravity="center">

			    <TextView
			        android:id="@+id/custom_title_sub"
			        android:layout_width="wrap_content"
			        android:layout_height="22.5dp"
			        android:layout_centerHorizontal="true"
			        android:layout_centerVertical="true"
			        android:background="#99000000"
			        android:text="Loading"
			        android:textAppearance="?android:attr/textAppearanceMedium"
			        android:textColor="#8D9DD8" />

			    <ProgressBar
			        android:layout_width="107dp"
			        android:layout_height="107dp"
			        android:background="#99000000"
			        android:layout_alignParentTop="true"
			        android:layout_centerHorizontal="true"
			        android:indeterminateDrawable="@drawable/my_progress_indeterminate"
			        android:windowSoftInputMode="adjustPan" />

			</RelativeLayout>

	    <!-- <ProgressBar
	        style="?android:attr/progressBarStyleLarge"
	        android:layout_width="30dp"
	        android:layout_height="30dp"
	        android:layout_gravity="center"
	        android:windowSoftInputMode="adjustPan" /> -->

	<!-- </TableRow> -->

</TableLayout>