<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/search_bar" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:background="#8d9dd8"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/myfolder_close"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="0.1"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/chat_close" />

            <TextView
                android:id="@+id/keypad_addcontact_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_weight="0.8"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/menu_user_add"
                android:textColor="#ffffffff" />
            
            <LinearLayout
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:layout_weight="0.1"
	            android:orientation="vertical" >
	        </LinearLayout>

        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:stretchColumns="4" >

            <TableRow
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="5dp"
                    android:layout_span="7" />
            </TableRow>

            <TableRow
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="5dp"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/myfolder_searchType"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:background="@drawable/search_selectbox"
                    android:contentDescription="@string/noDesc"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="25dp"
                    android:scaleType="fitXY"
                    android:text="@string/search_type_name" />

                <TextView
                    android:layout_width="5dp"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/myfolder_searchTextImage"
                    android:layout_width="5dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="0px"
                    android:layout_marginRight="0px"
                    android:background="@drawable/search_input_l"
                    android:contentDescription="@string/noDesc"
                    android:padding="0px"
                    android:paddingLeft="0px"
                    android:paddingRight="0dp"
                    android:visibility="invisible" />

                <kr.co.ultari.atsmart.basic.subview.SearchEdit
                    android:id="@+id/myfolder_searchText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="0.6"
                    android:background="@drawable/img_inputfield_whitepopup_2_normal"
                    android:ems="10"
                    android:hint="@string/inputSearchValue"
                    android:inputType="text"
                    android:textSize="15dp"
                	android:textStyle="bold"
                	android:textColorHint="#888888" />
                    
                <!-- <EditText
                    android:id="@+id/myfolder_searchText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="0.6"
                    android:background="@drawable/img_inputfield_whitepopup_2_normal"
                    android:ems="10"
                    android:hint="@string/inputSearchValue"
                    android:inputType="text"
                    android:textSize="15dp"
                	android:textStyle="bold"
                	android:textColorHint="#888888" /> -->

                <ImageButton
                    android:id="@+id/myfolder_search"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="0px"
                    android:layout_marginRight="0px"
                    android:layout_weight="0.1"
                    android:background="@drawable/btn_finder"
                    android:contentDescription="@string/noDesc"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp" />

                <TextView
                    android:layout_width="5dp"
                    android:layout_height="match_parent" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/myfolder_gesture"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:background="#FFFFFF"
        android:fadeScrollbars="true"
        android:scrollbarDefaultDelayBeforeFade="2000"
        android:scrollbarFadeDuration="1000"
        android:scrollbarSize="5dip"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbarThumbVertical="@drawable/scrollbar_vertical_thumb"
        android:scrollbarTrackVertical="@drawable/scrollbar_vertical_track" >

		    <LinearLayout
		        android:id="@+id/TreeLayout"
		        android:layout_width="match_parent"
		        android:layout_height="0dp"
		        android:background="#ff00ffff"
		        android:orientation="vertical" >
    		</LinearLayout>
		</ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#ffffffff"
        android:layout_weight="0.3"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" >

            <TextView
                android:id="@+id/note_userlist"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.30"
                android:text="이름"
                android:textColor="#ff000000"
                android:gravity="center"
                android:background="@drawable/border" />

            <TextView
                android:id="@+id/account_logintext"
                 android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.30"
                android:text="직위"
                android:textColor="#ff000000"
                android:gravity="center"
                android:background="@drawable/border" />

            <TextView
                android:id="@+id/exlauncher_overload_title"
                 android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.30"
                android:text="휴대폰"
                android:textColor="#ff000000"
                android:gravity="center"
                android:background="@drawable/border" />

        </LinearLayout>

        <ListView
            android:id="@+id/myfolder_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadeScrollbars="true"
            android:scrollbarDefaultDelayBeforeFade="2000"
            android:scrollbarFadeDuration="1000"
            android:scrollbarSize="5dip"
            android:scrollbarThumbVertical="@drawable/scrollbar_vertical_thumb"
            android:scrollbarTrackVertical="@drawable/scrollbar_vertical_track" >

        </ListView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:gravity="center"
        android:background="@drawable/search_bar">

        <Button
            android:id="@+id/myfolder_add_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:text="추가결과" />

        <Button
            android:id="@+id/myfolder_add"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="0.5"
            android:background="@drawable/border_gray"
            android:text="@string/menu_user_add"
            android:textColor="#888888" />

        <Button
            android:id="@+id/myfolder_select"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="0.5"
            android:background="@drawable/border_gray"
            android:text="@string/selected_all"
            android:textColor="#888888" />

    </LinearLayout>

</LinearLayout>