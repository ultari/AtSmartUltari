<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000" >
	<!-- FFEDEDED -->
	
    <ImageView
        android:id="@+id/bubble_right_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/noDesc"
        android:src="@drawable/img_bubble_bg_color_point" />

    <TableLayout
        android:id="@+id/right_bubble_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/bubble_right_arrow"
        android:layout_toLeftOf="@id/bubble_right_arrow" >

        <TableRow>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/noDesc"
                android:src="@drawable/img_bubble_bg_color_tl" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/img_bubble_bg_color_tm"
                android:contentDescription="@string/noDesc" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/noDesc"
                android:src="@drawable/img_bubble_bg_color_tr" />
        </TableRow>

        <TableRow>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/img_bubble_bg_color_ml"
                android:contentDescription="@string/noDesc" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFF477">

                <TextView
                    android:id="@+id/right_bubble_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="web|email|map"
                    android:background="#FFF477"
                    android:maxWidth="220dp"
                    android:textColor="#333333"
                    android:textSize="14.6dp" />

                <ImageView
                    android:id="@+id/talk_file_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#FFF477"
                    android:src="@drawable/icon_file"
                    android:contentDescription="@string/noDesc"/>
                
                <TextView
                    android:id="@+id/talk_fileName"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/talk_file_icon"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/talk_file_icon"
                    android:background="#FFF477"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:textColor="#333333"
                    android:textSize="14.6dp" />
                
                <TextView
                    android:id="@+id/talk_fileSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="12dp"
                    android:layout_toRightOf="@id/talk_file_icon"
                    android:layout_below="@id/talk_fileName"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="10dp"/>
                
                <ProgressBar
                    android:id="@+id/talk_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="200dp"
                    android:layout_height="5dp"
                    android:layout_alignLeft="@id/talk_file_icon"
                    android:layout_below="@id/talk_file_icon"
                    android:layout_marginTop="6.67dp"
                    android:max="100"
                    android:progress="50" />
                
            </RelativeLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/img_bubble_bg_color_mr"
                android:contentDescription="@string/noDesc" />
        </TableRow>

        <TableRow>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/noDesc"
                android:src="@drawable/img_bubble_bg_color_bl" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/img_bubble_bg_color_bm"
                android:contentDescription="@string/noDesc" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/noDesc"
                android:src="@drawable/img_bubble_bg_color_br" />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/right_bubble_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/right_bubble_box"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="6dp"
        android:layout_toLeftOf="@+id/bubble_right_arrow"
        android:gravity="right"
        android:singleLine="true"
        android:textColor="#80000000"
        android:textSize="11.6dp" />

    <TextView
        android:id="@+id/un_read_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/right_bubble_time"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@id/right_bubble_box"
        android:gravity="right"
        android:textColor="#80000000"
        android:textSize="11.6dp" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:layout_below="@id/right_bubble_box" />
    
    <ImageView
        android:id="@+id/send_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/right_bubble_box"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="3dp"
        android:layout_toLeftOf="@id/un_read_count"
        android:contentDescription="@string/noDesc"
        android:src="@drawable/noti_emergency" />

</RelativeLayout>