<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <LinearLayout
        android:id="@+id/main_grouptab"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#8d9dd8"
        android:visibility="gone" >

        <Button
            android:id="@+id/main_exit"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_margin="2dp"
            android:layout_weight="0.1"
            android:background="@drawable/chat_close" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="0.8"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/chat_adduser_select"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/main_chat"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_margin="2dp"
            android:background="@drawable/border_gray"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="@string/chat"
            android:visibility="visible" />
        
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/main_fragmenttab"
        android:layout_width="match_parent"
        android:layout_height="68.3dp"
        android:background="@drawable/pattern_menu" > <!-- 2016-03-31 -->

        <fragment
            android:id="@+id/tabbuttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            class="kr.co.ultari.atsmart.basic.view.MainViewTabFragment"/>

        <ImageView
            android:id="@+id/main_swipe_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/swipe_clue"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/main_swipe_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/swipe_clue2"
            android:visibility="gone" />
        
    </RelativeLayout>

    <!-- 2016-03-31 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.67dp"
        android:background="#ffffff"
        android:orientation="vertical" >
    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >
        </android.support.v4.view.ViewPager>

        <Button
            android:id="@+id/main_launcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="bottom"
            android:layout_marginBottom="26dp"
            android:layout_marginLeft="26dp"
            android:background="@drawable/btn_launcher_menu" />

    </FrameLayout>

</TableLayout>