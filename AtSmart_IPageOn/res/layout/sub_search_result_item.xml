<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="63.3dp"
    android:background="#ffffff"
    android:orientation="horizontal"
    android:paddingBottom="3dp"
    android:paddingLeft="5dp"
    android:paddingTop="3dp" >

    <kr.co.ultari.atsmart.basic.control.UserImageView
        android:id="@+id/searchResultUser"
        android:layout_width="63dp"
        android:layout_height="63dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        class="kr.co.ultari.atsmart.control.UserImageView"
        android:contentDescription="@string/noDesc"
        android:src="@drawable/img_profile_72x72" />

    <ImageView
        android:id="@+id/checkBoxSearchItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="13dp"
        android:background="@drawable/radio_nor_whitebg_s"
        android:contentDescription="@string/noDesc"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="220dp"
        android:layout_height="63dp"
        android:layout_toRightOf="@+id/searchResultUser"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/searchResultName"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_marginLeft="6dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:text="@string/search_type_name"
            android:textColor="#333333"
            android:textSize="16.6dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp" >

            <ImageView
                android:id="@+id/searchMobileStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:contentDescription="@string/noDesc"
                android:paddingLeft="5dp"
                android:src="@drawable/icon_mobile_off"
                android:visibility="visible" />
            
              <ImageView
                  android:id="@+id/searchUcStatus"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:contentDescription="@string/noDesc"
                  android:paddingLeft="5dp"
                  android:src="@drawable/icon_uc_off"
                  android:visibility="visible" />

              <ImageView
                  android:id="@+id/searchResultUserIcon"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:contentDescription="@string/noDesc"
                  android:paddingLeft="5dp"
                  android:src="@drawable/icon_pc_off"
                  android:visibility="visible" />

            <TextView
                android:id="@+id/searchResultNickName"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="top"
                android:paddingLeft="10dp"
                android:text="@string/search_type_name"
                android:singleLine="true"
                android:textColor="#7f7f7f"
                android:textSize="13.3dp" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>