<?xml version="1.0" encoding="UTF-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
        
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff" >  

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="@drawable/pattern_bar" >  

            <Button
                android:id="@+id/contact_add_btncancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="13dp"
                android:background="@drawable/favorite_cancel"
                android:text="@string/cancel"
                android:textSize="13.3dp"
                android:textColor="#ffffff" />  

            <Button
                android:id="@+id/contact_add_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="false"
                android:layout_centerVertical="true"
                android:layout_marginRight="13dp"
                android:background="@drawable/favorite_cancel"
                android:text="@string/save"
                android:textSize="13.3dp"
                android:textColor="#ffffff" />  

            <TextView
                android:id="@+id/contact_add_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/option_cancel"
                android:layout_alignBottom="@+id/option_cancel"
                android:layout_centerInParent="true"
                android:layout_marginRight="114dp"
                android:text="@string/new_contact"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="19dp" />

        </RelativeLayout>
        
    <!-- name -->    
	<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.67dp"
            android:orientation="vertical"
            android:background="#d6d6d6" >
        </LinearLayout>
        
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp" >

        <ImageView
            android:id="@+id/contact_add_photo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/img_profile_addadress" />  

        <EditText
            android:id="@+id/contact_add_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="11dp"
            android:layout_marginRight="11dp"
            android:layout_marginTop="11dp"
            android:layout_toRightOf="@+id/tv_nickname"
            android:background="@drawable/addadress_inputfield_name"
            android:ems="10"
            android:hint="@string/input_contact_name"
            android:paddingLeft="13dp"
            android:textColor="#7f7f7f"
            android:textColorHint="#7f7f7f"
            android:textSize="16.6dp" >  
            <requestFocus />
        </EditText>

    </RelativeLayout>
        
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content">

        </RelativeLayout>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="39.3dp"
         android:layout_marginTop="3dp"
         android:background="#f1f1f1" >  

            <LinearLayout
                android:layout_width="3.33dp"
                android:layout_height="match_parent"
                android:background="#74afea"
                android:orientation="vertical" >  
            </LinearLayout>

            <TextView
                android:id="@+id/contact_number_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="13dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="@string/info_phone"
                android:textColor="#333333"
                android:textSize="16.6dp" />  
        </LinearLayout>

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="63dp" >

         <EditText
             android:id="@+id/contact_add_mobile"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_centerInParent="true"
             android:layout_marginBottom="10dp"
             android:layout_marginRight="10dp"
             android:layout_marginTop="10dp"
             android:background="@drawable/addadress_inputfield_contents"
             android:ems="10"
             android:hint="@string/input_contact_mobile"
             android:inputType="phone"
             android:paddingLeft="70dp"
             android:textColor="#7f7f7f"
             android:textColorHint="#7f7f7f"
             android:textSize="16.6dp" />

         <TextView
             android:id="@+id/contact_add_mobile_msg"
             android:layout_width="60dp"
             android:layout_height="wrap_content"
             android:layout_centerVertical="true"
             android:layout_marginBottom="10dp"
             android:layout_marginLeft="10dp"
             android:layout_marginTop="10dp"
             android:background="@drawable/addadress_inputfield_contents"
             android:gravity="center_vertical|center_horizontal"
             android:text="@string/mobile"
             android:textColor="#7f7f7f"
             android:textSize="13.3dp"
             android:visibility="visible" />
   
     </RelativeLayout>
     
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="0.66dp"
         android:background="#d6d6d6"
         android:orientation="vertical" >  
        </LinearLayout>

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="63dp" >

         <EditText
             android:id="@+id/contact_add_telephone"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_centerInParent="true"
             android:layout_marginBottom="10dp"
             android:layout_marginRight="10dp"
             android:layout_marginTop="10dp"
             android:background="@drawable/addadress_inputfield_contents"
             android:ems="10"
             android:hint="@string/input_contact_mobile"
             android:inputType="phone"
             android:paddingLeft="70dp"
             android:textColor="#7f7f7f"
             android:textColorHint="#7f7f7f"
             android:textSize="16.6dp" />

         <TextView
             android:id="@+id/contact_add_telephone_msg"
             android:layout_width="60dp"
             android:layout_height="wrap_content"
             android:layout_centerVertical="true"
             android:layout_marginBottom="10dp"
             android:layout_marginLeft="10dp"
             android:layout_marginTop="10dp"
             android:background="@drawable/addadress_inputfield_contents"
             android:gravity="center_vertical|center_horizontal"
             android:text="@string/office"
             android:textColor="#7f7f7f"
             android:textSize="13.3dp"
             android:visibility="visible" />
   

     </RelativeLayout>
     
     <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.66dp"
            android:orientation="vertical"
            android:background="#d6d6d6" >  
        </LinearLayout>
        
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="39.3dp"
         android:background="#f1f1f1" >  

            <LinearLayout
                android:layout_width="3.33dp"
                android:layout_height="match_parent"
                android:background="#74afea"
                android:orientation="vertical" >  
            </LinearLayout>

            <TextView
                android:id="@+id/contact_email_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="13dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="@string/info_email"
                android:textColor="#333333"
                android:textSize="16.6dp" />  

        </LinearLayout>

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="63dp" >

         <EditText
             android:id="@+id/contact_add_email"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_centerInParent="true"
             android:layout_marginBottom="10dp"
             android:layout_marginRight="10dp"
             android:layout_marginTop="10dp"
             android:background="@drawable/addadress_inputfield_contents"
             android:ems="10"
             android:hint="@string/input_contact_email"
             android:inputType="textEmailAddress"
             android:paddingLeft="70dp"
             android:textColor="#7f7f7f"
             android:textColorHint="#7f7f7f"
             android:textSize="16.6dp" />

         <TextView
             android:id="@+id/contact_add_person_msg"
             android:layout_width="60dp"
             android:layout_height="wrap_content"
             android:layout_centerVertical="true"
             android:layout_marginBottom="10dp"
             android:layout_marginLeft="10dp"
             android:layout_marginTop="10dp"
             android:background="@drawable/addadress_inputfield_contents"
             android:gravity="center_vertical|center_horizontal"
             android:text="@string/person"
             android:textColor="#7f7f7f"
             android:textSize="13.3dp" />
  
  
     </RelativeLayout>
     
     <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.66dp"
            android:orientation="vertical"
            android:background="#d6d6d6" >  
        </LinearLayout>
	<!-- org -->

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="68dp"
	    android:background="#f1f1f1"
	    android:visibility="gone" >  

            <LinearLayout
                android:layout_width="3.33dp"
                android:layout_height="match_parent"
                android:background="#74afea"
                android:orientation="vertical" >  
            </LinearLayout>

            <TextView
                android:id="@+id/contact_org_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="13dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="@string/company_name"
                android:textColor="#333333"
                android:textSize="16.6dp" />  
 
        </LinearLayout>

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:visibility="gone" >

	    <TextView
	        android:layout_width="25dp"
	        android:layout_height="match_parent"
	        android:layout_marginBottom="11dp"
	        android:layout_marginLeft="11dp"
	        android:layout_marginTop="11dp"
	        android:layout_toLeftOf="@+id/contact_add_name"
	        android:background="#131313"
	        android:gravity="center_vertical|center_horizontal" />
	    
		<EditText
		    android:id="@+id/contact_add_company"
		    android:layout_width="match_parent"
		    android:layout_height="63dp"
		    android:layout_marginBottom="11dp"
		    android:layout_marginRight="11dp"
		    android:layout_marginTop="11dp"
		    android:layout_weight="1"
		    android:background="#131313"
		    android:ems="10"
		    android:hint="@string/input_contact_office"
		    android:textColorHint="#7d7d7d"
		    android:textSize="19dp"
		    android:textColor="#DCDCDC" />

	</LinearLayout>
     
     <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.66dp"
            android:orientation="vertical"
            android:background="#d6d6d6" >  
        </LinearLayout>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:visibility="gone" >

         <TextView
             android:layout_width="25dp"
             android:layout_height="match_parent"
             android:layout_marginBottom="11dp"
             android:layout_marginLeft="11dp"
             android:layout_marginTop="11dp"
             android:layout_toLeftOf="@+id/contact_add_name"
             android:background="#131313"
             android:gravity="center_vertical|center_horizontal" />
         
         <EditText
             android:id="@+id/contact_add_position"
             android:layout_width="match_parent"
             android:layout_height="63dp"
             android:layout_marginBottom="11dp"
             android:layout_marginRight="11dp"
             android:layout_marginTop="11dp"
             android:layout_weight="1"
             android:background="#131313"
             android:ems="10"
             android:hint="@string/input_contact_position"
             android:textColorHint="#7d7d7d"
             android:textSize="19dp" 
             android:textColor="#DCDCDC"/>

     </LinearLayout>

	</LinearLayout>
</ScrollView>