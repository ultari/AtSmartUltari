<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="62dp"
    android:background="#ffffff" >
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/message_subject"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="100dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="#333333"
        android:background="@android:color/transparent"
        android:textSize="16.6dp"
        android:textStyle="normal"/>
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/message_subject"
        android:layout_alignParentLeft="@id/message_subject"
        android:id="@+id/message_sender"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textColor="#7f7f7f"
        android:background="@android:color/transparent"
        android:textSize="13.3dp"
        android:textStyle="normal"/>
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/message_subject"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_alignTop="@id/message_subject"
        android:id="@+id/message_date"
        android:layout_marginLeft="20dp"
        android:textColor="#74afea"
        android:background="@android:color/transparent"
        android:textSize="13.3dp"
        android:textStyle="normal"/>
    
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/message_sender"
        android:layout_marginRight="20sp"
        android:id="@+id/message_read"
        android:background="@drawable/notice_unread"
        android:contentDescription="@string/noDesc"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1.33dp"
        android:background="#191919"
        android:layout_marginTop="10dp"
        android:layout_below="@id/message_sender"
        android:orientation="vertical" >
    </LinearLayout>

</RelativeLayout>
