<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f1f1f1"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/layout_addcontact"
            android:layout_width="match_parent"
            android:layout_height="63.33dp"
            android:background="#f1f1f1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone" >

            <Button
                android:id="@+id/keypad_btnaddcontact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:background="@drawable/btn_keypad_addcontact" />

            <TextView
                android:id="@+id/keypad_addcontact_title"
                android:layout_width="200dp"
                android:layout_height="56dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="@string/new_contact"
                android:textColor="#333333"
                android:textSize="19dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_find"
            android:layout_width="match_parent"
            android:layout_height="61.33dp"
            android:background="#f1f1f1"
            android:orientation="horizontal"
            android:visibility="visible" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="0.2"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/keypad_usericon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6.5dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="6.5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_profile_190x190"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="6.5dp"
                android:layout_marginTop="6.5dp"
                android:layout_weight="0.6"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/keypad_username"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.6"
                    android:gravity="center_vertical"
                    android:text="홍길동"
                    android:textColor="#333333"
                    android:textSize="16.67dp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/keypad_userphone"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.4"
                    android:gravity="center_vertical"
                    android:text="01012345678"
                    android:textColor="#7f7f7f"
                    android:textSize="13.33dp"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="6.5dp"
                android:layout_marginTop="6.5dp"
                android:layout_weight="0.2"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/keypad_usercount"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.6"
                    android:gravity="center"
                    android:text="10"
                    android:textColor="#333333"
                    android:textSize="16.67dp"
                    android:visibility="invisible" />

                <ImageButton
                    android:id="@+id/keypad_arrow"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.4"
                    android:background="#00223344"
                    android:scaleType="center"
                    android:src="@drawable/icon_triangle_down"
                    android:visibility="invisible" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#d6d6d6" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#ffffff" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="93.33dp"
            android:layout_gravity="center_vertical"
            android:background="#f1f1f1"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/keypad_iv_hd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:src="@drawable/keypad_hd" />

            <TextView
                android:id="@+id/keypad_tv_input_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="center_vertical|center_horizontal"
                android:inputType="phone"
                android:textColor="#8d9dd8"
                android:textSize="35dp" >

                <requestFocus />
            </TextView>

            <Button
                android:id="@+id/keypad_btndel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/keypad_del" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:orientation="vertical" >

        <!-- android:background="#2E4D65" -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.67dp"
            android:background="#d6d6d6"
            android:orientation="vertical" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:layout_weight="0.166"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <!-- keypad_input -->
            <Button
                android:id="@+id/keypad_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:background="@drawable/keypad_input"
                android:text="1"
                android:textSize="40dp" />

            <Button
                android:id="@+id/keypad_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:background="@drawable/keypad_input"
                android:text="2"
                android:textSize="40dp" />

            <Button
                android:id="@+id/keypad_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:background="@drawable/keypad_input"
                android:text="3"
                android:textSize="40dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="0.166"
            android:gravity="center_vertical" >

            <Button
                android:id="@+id/keypad_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:background="@drawable/keypad_input"
                android:text="4"
                android:textSize="40dp" />

            <Button
                android:id="@+id/keypad_5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:background="@drawable/keypad_input"
                android:text="5"
                android:textSize="40dp" />

            <Button
                android:id="@+id/keypad_6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:background="@drawable/keypad_input"
                android:text="6"
                android:textSize="40dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="0.166"
            android:gravity="center_vertical" >

            <Button
                android:id="@+id/keypad_7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:background="@drawable/keypad_input"
                android:text="7"
                android:textSize="40dp" />

            <Button
                android:id="@+id/keypad_8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:background="@drawable/keypad_input"
                android:text="8"
                android:textSize="40dp" />

            <Button
                android:id="@+id/keypad_9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:background="@drawable/keypad_input"
                android:text="9"
                android:textSize="40dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="0.166"
            android:gravity="center_vertical" >

            <ImageButton
                android:id="@+id/keypad_star"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:background="#00000000"
                android:scaleType="center"
                android:src="@drawable/keypad_star_style" />

            <Button
                android:id="@+id/keypad_0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:background="@drawable/keypad_input"
                android:text="0"
                android:textSize="40dp" />

            <ImageButton
                android:id="@+id/keypad_sharp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:background="#00000000"
                android:scaleType="center"
                android:src="@drawable/keypad_sharp_style" />
        </LinearLayout>

        <!-- android:background="#2E4D65" -->

        <LinearLayout
            android:id="@+id/keypad_call_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.332"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/keypad_btncall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_icon_keypad_call" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.67dp"
            android:background="#d6d6d6"
            android:orientation="vertical" >
        </LinearLayout>
    </LinearLayout>

</LinearLayout>