<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="39.3dp"
    android:background="#ffffff">
    
    <TextView
        android:id="@+id/messageViewFileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="20dp"
        android:layout_centerInParent="true"
        android:layout_alignParentLeft="true"
        android:textColor="#333333"
        android:textSize="16.6dp"
        android:ellipsize="middle"
        android:singleLine="true"
        android:layout_marginTop="2dp"
        android:textStyle="normal"/>
    
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_arrow_lightpurple"
        android:background="@android:color/transparent"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="20dp"
        android:contentDescription="@string/noDesc"
        android:id="@+id/message_view_run_file"/>

</RelativeLayout>
